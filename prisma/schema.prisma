datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Estimate {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  itemName  String
  userId    String
  userName  String?
  email     String?
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Receipt {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  itemName  String
  price     String
  userName  String?
  email     String?
  phone     String?
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

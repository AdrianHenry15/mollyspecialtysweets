generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mongodb"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model User {
    id                String @id @default(auto()) @map("_id") @db.ObjectId
    firstName         String
    lastName          String
    email             String @unique
    emailVerification String
    phone             String @unique
    phoneVerification String
}

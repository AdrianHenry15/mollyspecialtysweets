datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Estimate {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  itemName    String
  userId      String?
  image       String?
  username    String
  email       String?  @unique
  phoneNumber String?  @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Invoice {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  itemName    String
  price       String
  userId      String?
  image       String?
  username    String
  email       String?  @unique
  phoneNumber String?  @unique
  verified    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
